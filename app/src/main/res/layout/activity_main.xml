<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sendbird.android.sample.vibratetalk.MainActivity">

    <EditText
        android:id="@+id/etxt_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="User ID"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:id="@+id/etxt_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nickname"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_below="@+id/etxt_user_id"
        android:layout_alignStart="@+id/etxt_user_id" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_marginTop="59dp"
        android:minWidth="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Log in"
        android:gravity="center"
        android:layout_below="@+id/etxt_nickname"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
